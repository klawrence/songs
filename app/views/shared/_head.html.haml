%title= page_title
%meta{name: 'description', content: page_description}

= csrf_meta_tags
= csp_meta_tag

%link{rel: 'canonical', href: canonical_url}
%link{rel: 'icon', href: '/favicon.png', sizes: '180x180', type: 'image/png'}
%link{rel: 'apple-touch-icon', href: '/apple-touch-icon-precomposed.png', sizes: '180x180', type: 'image/png'}

%meta{name: 'viewport', content: 'width=device-width, initial-scale=1.0'}
%meta{'http-equiv': 'Content-Type', content: 'text/html;charset=utf-8'}
%meta{'http-equiv': 'X-UA-Compatible', content: 'IE=edge,chrome=1'}
%meta{name: 'analytics_id', content: Rails.application.config.google_analytics_id}

= render 'shared/head/open_graph'
= render 'shared/head/fonts'

= stylesheet_link_tag 'application', media: 'all'